extends layout

block content
  h1= title
  p rows: #{query.rows} columns: #{query.cols}
  -rows = Number(query.rows)
  -cols = Number(query.cols)
  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p One of your queries could not get converted to a number.
  else if rows > 13 || rows < 3
    p Rows out of range 3-13
  else if cols > 13 || cols < 3
    p Columns out of range 3-13
  else 
    table#outer 
      -for(let i=0;i<rows;i++){
        tr#middle 
          - for(let j=0;j<cols;j++){
              td= (i*i)+j
          - }
      -}
  